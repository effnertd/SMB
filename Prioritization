        <div class="controls">
            <button onclick="resetMatrix()">Reset Matrix</button>
            <button onclick="savePDF()">Print to PDF</button>
        </div>
    </div>

    <script>
        let draggedElement = null;
        let placedChips = new Map();

        // Setup drag handlers for chips
        document.querySelectorAll('.chip').forEach(chip => {
            chip.addEventListener('dragstart', handleDragStart);
            chip.addEventListener('dragend', handleDragEnd);
        });

        // Setup drop zone
        const matrix = document.getElementById('matrix');
        matrix.addEventListener('dragover', handleDragOver);
        matrix.addEventListener('drop', handleDrop);

        function handleDragStart(e) {
            draggedElement = this;
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';
            e.dataTransfer.setData('text/html', this.innerHTML);
        }

        function handleDragEnd(e) {
            this.classList.remove('dragging');
        }

        function handleDragOver(e) {
            if (e.preventDefault) {
                e.preventDefault();
            }
            e.dataTransfer.dropEffect = 'move';
            return false;
        }

        function handleDrop(e) {
            if (e.stopPropagation) {
                e.stopPropagation();
            }
            e.preventDefault();

            if (draggedElement) {
                const rect = matrix.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                const chipId = draggedElement.getAttribute('data-id');
                const chipText = draggedElement.textContent;

                // Remove existing chip if it exists
                if (placedChips.has(chipId)) {
                    const existingChip = placedChips.get(chipId);
                    existingChip.remove();
                }

                // Create new placed chip
                const placedChip = document.createElement('div');
                placedChip.className = 'placed-chip';
                placedChip.textContent = chipText;
                placedChip.style.left = x + 'px';
                placedChip.style.top = y + 'px';
                placedChip.setAttribute('data-id', chipId);
                
                // Make it draggable within the matrix
                placedChip.draggable = true;
                placedChip.addEventListener('dragstart', function(e) {
                    draggedElement = this;
                    e.dataTransfer.effectAllowed = 'move';
                });
                placedChip.addEventListener('dragend', function(e) {
                    draggedElement = null;
                });

                matrix.appendChild(placedChip);
                placedChips.set(chipId, placedChip);

                // Hide original chip
                draggedElement.style.opacity = '0.3';
                draggedElement.style.pointerEvents = 'none';
            }

            return false;
        }

        function resetMatrix() {
            // Remove all placed chips
            placedChips.forEach(chip => chip.remove());
            placedChips.clear();

            // Show all original chips
            document.querySelectorAll('.chip').forEach(chip => {
                chip.style.opacity = '1';
                chip.style.pointerEvents = 'auto';
            });
        }

        function exportSnapshot() {
            const matrixRect = matrix.getBoundingClientRect();
            let snapshot = "Challenge Prioritization Snapshot\n";
            snapshot += "=" .repeat(50) + "\n\n";

            const positions = [];
            placedChips.forEach((chip, id) => {
                const chipRect = chip.getBoundingClientRect();
                const x = ((chipRect.left + chipRect.width/2 - matrixRect.left) / matrixRect.width * 100).toFixed(1);
                const y = (100 - (chipRect.top + chipRect.height/2 - matrixRect.top) / matrixRect.height * 100).toFixed(1);
                
                let quadrant;
                if (x > 50 && y > 50) quadrant = "High Risk / High Effort";
                else if (x <= 50 && y > 50) quadrant = "High Risk / Low Effort (PRIORITY)";
                else if (x <= 50 && y <= 50) quadrant = "Low Risk / Low Effort";
                else quadrant = "Low Risk / High Effort";

                positions.push({
                    name: chip.textContent,
                    risk: y,
                    effort: x,
                    quadrant: quadrant
                });
            });

            // Sort by risk (high to low)
            positions.sort((a, b) => b.risk - a.risk);

            positions.forEach(pos => {
                snapshot += `${pos.name}\n`;
                snapshot += `  Risk: ${pos.risk}% | Effort: ${pos.effort}%\n`;
                snapshot += `  Quadrant: ${pos.quadrant}\n\n`;
            });

            // Copy to clipboard
            navigator.clipboard.writeText(snapshot).then(() => {
                alert('Snapshot copied to clipboard!');
            }).catch(() => {
                // Fallback: show in alert
                alert(snapshot);
            });
        }

        function savePDF() {
            alert('To save as PDF:\n\n1. Press Ctrl+P (Windows) or Cmd+P (Mac)\n2. Select "Save as PDF" as the destination\n3. Click Save\n\nThe filename will include today\'s date and time.');
        }
    </script>
</body>
