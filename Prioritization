            <div class="matrix-wrapper">
                <div class="matrix" id="matrix">
                    <div class="centerline vertical-line"></div>
                    <div class="centerline horizontal-line"></div>
                    
                    <div class="quadrant-label q1">High Risk / High Pain</div>
                    <div class="quadrant-label q2">High Risk / Low Pain</div>
                    <div class="quadrant-label q3">Low Risk / Low Pain</div>
                    <div class="quadrant-label q4">Low Risk / High Pain</div>
                    
                    <div class="axis-label y-axis">Business Risk (Impact)</div>
                    <div class="axis-label x-axis">Current Pain Level</div>
                    
                    <div class="axis-low y-low">Low</div>
                    <div class="axis-low y-high">High</div>
